@model IEnumerable<NextwoFinalApp2023.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MenuId" class="btn btn-danger">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
