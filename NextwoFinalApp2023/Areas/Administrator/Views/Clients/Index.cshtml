@model IEnumerable<NextwoFinalApp2023.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientPosition)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientPosition)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-danger">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-warning">Delete</a>
            </td>


        </tr>
        }

    </tbody>
</table>
